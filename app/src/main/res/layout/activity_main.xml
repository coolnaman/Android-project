<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apkglobal.responsiveuserinterface.MainActivity">

     <Button
         app:layout_widthPercent="50%"
         app:layout_heightPercent="25%"
         android:text="Home"
         android:id="@+id/home"

         />
    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="25%"
        android:text="about"
        android:layout_toRightOf="@id/home"
        android:id="@+id/about"

        />
    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="25%"
        android:text="Career"

        android:layout_below="@id/home"

        android:id="@+id/career"

        />
    <Button
    app:layout_widthPercent="50%"
    app:layout_heightPercent="25%"
        android:layout_toRightOf="@id/home"
        android:layout_below="@id/about"

        android:text="Technology"
    android:id="@+id/technology"

    />
    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="25%"
        android:text="Contact Us"

        android:layout_below="@id/career"

        android:id="@+id/contactus"

        />

    <Button
    app:layout_widthPercent="50%"
    app:layout_heightPercent="25%"
    android:text="Admission"
        android:layout_toRightOf="@id/contactus"
        android:layout_below="@id/technology"

        android:id="@+id/admission"

    />

    <Button
    app:layout_widthPercent="50%"
    app:layout_heightPercent="25%"


        android:layout_below="@id/contactus"
        android:text="Enquiry"
    android:id="@+id/enquiry"

    />

    <Button
        app:layout_widthPercent="50%"
        app:layout_heightPercent="25%"
        android:text="Call Us"
        android:layout_toRightOf="@id/enquiry"
        android:layout_below="@id/admission"

        android:id="@+id/callus"
        />



</android.support.percent.PercentRelativeLayout>
